<?xml version="1.0" encoding="utf-8"?>
<dmz>
   <plugins>
      <plugin name="dmzAudioModuleOpenAL"/>
      <plugin name="dmzAudioModulePortalBasic"/>
      <plugin name="dmzAudioPluginObject" />
      <plugin name="dmzAudioPluginEventSimple" />
   </plugins>
   <dmzAudioModulePortalBasic>
     <name value="audioportal1"/>
   </dmzAudioModulePortalBasic>
   <dmzAudioModuleFMOD>
      <dopplerScale value="1.0"/>
      <distanceFactor value="1.0"/>
      <rollOffScale value="1.0"/>
      <maxChannels value="256"/>
      <rightHandedCoordinates value="True"/>
      <forceFullDirectSoundHRTF value="True"/>
   </dmzAudioModuleFMOD>
   <dmzAudioPluginEventSimple>
      <event-type name="Event_Launch" resource="launch-sound"/>
      <event-type name="Event_Detonation" resource="detonation-sound"/>
      <event-type name="Event_Collision" resource="collision-sound"/>
   </dmzAudioPluginEventSimple>
</dmz>

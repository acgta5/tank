         </node>
         <node type="transform" name="display kills">
            <position x="36" y="204"/>
            <node type="box">
               <min x="0" y="0"/>
               <max x="128" y="16"/>
               <texture resource="tank kills"/>
               <color name="digit color"/>
               <depth value="2"/>
            </node>
            <node type="transform">
               <position x="128" y="0"/>
               <node type="clone" name="kills digit3" template="digit"/>

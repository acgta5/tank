<overlay>
   <node type="transform" name="display">
      <node type="transform" name="display slider">
         <position x="500" y="-256"/>
         <node type="box">
            <min x="0" y="128"/>
            <max x="256" y="256"/>
            <depth value="4"/>
            <texture resource="tank display glare"/>
